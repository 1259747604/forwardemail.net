extends ../layout

block content
  .container.mt-3
    .row
      .col-12
        .card.border-dark.d-block.text-center
          h1.h5.card-header= t("Verify email")
          .card-body
            .card-text
              p= t("Use this verification code:")
              p.display-3= pin
              p= t("This code expires within %s.", dayjs(expiresAt).locale(locale).fromNow(true))
            a.btn.btn-lg.btn-block.btn-primary(href=link)
              = t("Verify now")
          .card-footer.small.text-danger.font-weight-bold.text-decoration-underline!= t('Verify by <span class="notranslate">%s</span> to prevent deletion.', dayjs(user.created_at).add(30, "days").locale(locale).format("LL"))
