
extends ../../layout

block body
  .container-fluid.pt-3
    .row
      .col
        include ../../_breadcrumbs
  .container.pb-3
    .row
      .col-xs-12.col-sm-12.col-md-8.offset-md-2.col-lg-6.offset-lg-3
        .card
          .card-body
            .text-center
              h1.card-title.h4= t('Add Custom Domain Name')
              p= t('Enter your registered domain name below.')
            form.ajax-form(action=ctx.path, method="POST")
              input(type="hidden", name="_csrf", value=ctx.csrf)
              .form-group.floating-label
                input#input-domain(name='domain', autocomplete="off", placeholder="example.com", autocorrect="off", spellcheck="false", autocapitalize="off", type="text").form-control.form-control-lg
                label(for="input-domain")= t('Domain name')
              button.btn.btn-success.btn-block.btn-lg(type="submit")= t('Continue')
          .card-footer.text-center
            a.card-link(href=l('/domain-registration'), target='_blank', rel='noopener')
              = t('Need to register a domain?')
