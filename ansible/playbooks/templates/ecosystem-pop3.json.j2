{
  "apps": [
    {
      "name": "pop3",
      "script": "pop3.js",
      "exec_mode": "cluster",
      "wait_ready": true,
      "instances": "max",
      "pmx": false,
      "env_production": {
        "NODE_ENV": "production",
        "POP3_PORT": 995
      }
    },
    {
      "name": "pop3-2995",
      "script": "pop3.js",
      "exec_mode": "cluster",
      "wait_ready": true,
      "instances": "2",
      "pmx": false,
      "env_production": {
        "NODE_ENV": "production",
        "POP3_PORT": 2995
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "deploy",
      "host": [{% for host in groups['smtp'] %}"{{ hostvars[host].ansible_host }}"{% if not loop.last %}, {% endif %}{% endfor %}],
      "ref": "origin/master",
      "repo": "{{ lookup('env', 'GITHUB_REPO') }}",
      "path": "/var/www/production",
      "pre-deploy": "git reset --hard",
      "post-deploy": "pnpm install && NODE_ENV=production npm start build && pm2 startOrGracefulReload ecosystem-pop3.json --env production --update-env"
    }
  }
}
